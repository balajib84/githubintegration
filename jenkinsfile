// Jenkinsfile

try {
  stage('checkout') {
    node {
      cleanWs()
      checkout scm
    }
  }

  // Run terraform init
  stage('init') {
    node {
       //ansiColor('xterm') {
          bat 'terraform init'
        //}  
    }
  }

  // Run terraform plan
  stage('plan') {
    node 
       {
        ansiColor('xterm') {
          bat 'terraform plan -out m3.tfplan'
        }
      }
    
  }

  if (env.BRANCH_NAME == 'master') {

    // Run terraform apply
    stage('apply') {
      node 
        {
          ansiColor('xterm') {
            bat 'terraform apply "m3.tfplan"'
          }
        }
      
    }

    // Run terraform show
    stage('show') {
      node 
        {
          ansiColor('xterm') {
            bat 'terraform show'
          }
        }
      
    }
  }
  currentBuild.result = 'SUCCESS'
}
catch (org.jenkinsci.plugins.workflow.steps.FlowInterruptedException flowError) {
  currentBuild.result = 'ABORTED'
}
catch (err) {
  currentBuild.result = 'FAILURE'
  throw err
}
finally {
  if (currentBuild.result == 'SUCCESS') {
    currentBuild.result = 'SUCCESS'
  }
}
